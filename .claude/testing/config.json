{
  "chrome": {
    "headless": false,
    "devtools": true,
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "slowMo": 500
  },
  "orchestrator": {
    "maxRetries": 3,
    "retryDelay": 5000,
    "screenshotOnError": true,
    "pauseOnError": false,
    "continueOnFailure": true
  },
  "reporting": {
    "outputDir": "./test-results",
    "formats": ["html", "json"],
    "saveScreenshots": true,
    "saveLogs": true
  },
  "features": [
    "auth-login",
    "project-create",
    "rfi-create",
    "rfi-list-and-filter",
    "rfi-respond",
    "rfi-close",
    "change-order-create",
    "change-order-approve",
    "change-order-reject",
    "daily-report-create",
    "daily-report-edit",
    "daily-report-submit",
    "submittal-create",
    "submittal-review",
    "submittal-approve",
    "project-settings",
    "project-overview"
  ]
}
