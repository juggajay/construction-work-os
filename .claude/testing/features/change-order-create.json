{
  "id": "change-order-create",
  "name": "Create Change Order",
  "module": "change-orders",
  "prerequisites": ["auth-login", "project-create"],
  "steps": [
    {
      "action": "navigate",
      "value": "http://localhost:3001/ryox-carpentry/projects/b694bd30-93d0-41dc-bda6-aadc9fa3ca57/change-orders",
      "description": "Navigate to Change Orders page"
    },
    {
      "action": "click",
      "selector": "button:has-text('Create Change Order')",
      "description": "Click Create Change Order button",
      "timeout": 5000
    },
    {
      "action": "wait",
      "value": "1000",
      "description": "Wait for form to load"
    },
    {
      "action": "type",
      "selector": "[name='title']",
      "value": "E2E Test - Additional Foundation Work",
      "description": "Enter change order title"
    },
    {
      "action": "type",
      "selector": "[name='description']",
      "value": "Automated test change order for additional foundation reinforcement required per structural engineer review.",
      "description": "Enter change order description"
    },
    {
      "action": "type",
      "selector": "[name='estimated_cost']",
      "value": "15000",
      "description": "Enter estimated cost impact"
    },
    {
      "action": "type",
      "selector": "[name='schedule_impact']",
      "value": "5",
      "description": "Enter schedule impact in days"
    },
    {
      "action": "click",
      "selector": "button:has-text('Create Change Order')",
      "description": "Submit change order form",
      "screenshot": true
    },
    {
      "action": "wait",
      "value": "3000",
      "description": "Wait for change order creation"
    },
    {
      "action": "assert",
      "selector": "text=E2E Test - Additional Foundation Work",
      "description": "Verify change order appears in list"
    }
  ],
  "cleanup": []
}
