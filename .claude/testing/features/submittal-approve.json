{
  "id": "submittal-approve",
  "name": "Approve Submittal",
  "module": "submittals",
  "prerequisites": ["auth-login", "project-create", "submittal-create", "submittal-review"],
  "steps": [
    {
      "action": "navigate",
      "value": "http://localhost:3001/ryox-carpentry/projects/b694bd30-93d0-41dc-bda6-aadc9fa3ca57/submittals",
      "description": "Navigate to Submittals page"
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Wait for submittals list to load"
    },
    {
      "action": "click",
      "selector": "text=E2E Test - Cast-in-Place Concrete",
      "description": "Click on the reviewed submittal"
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Wait for submittal details to load"
    },
    {
      "action": "click",
      "selector": "button:has-text('Approve')",
      "description": "Click Approve button"
    },
    {
      "action": "wait",
      "value": "1000",
      "description": "Wait for approval dialog"
    },
    {
      "action": "click",
      "selector": "[value='approved']",
      "description": "Select Approved status"
    },
    {
      "action": "type",
      "selector": "[name='approval_notes']",
      "value": "Submittal approved for construction. All technical requirements have been met.",
      "description": "Enter approval notes"
    },
    {
      "action": "click",
      "selector": "button:has-text('Confirm Approval')",
      "description": "Confirm approval",
      "screenshot": true
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Wait for approval to process"
    },
    {
      "action": "assert",
      "selector": "text=Approved",
      "description": "Verify status changed to Approved"
    }
  ],
  "cleanup": []
}
