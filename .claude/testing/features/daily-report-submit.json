{
  "id": "daily-report-submit",
  "name": "Submit Daily Report",
  "module": "daily-reports",
  "prerequisites": ["auth-login", "project-create", "daily-report-create"],
  "steps": [
    {
      "action": "navigate",
      "value": "http://localhost:3001/ryox-carpentry/projects/b694bd30-93d0-41dc-bda6-aadc9fa3ca57/daily-reports",
      "description": "Navigate to Daily Reports page"
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Wait for reports list to load"
    },
    {
      "action": "click",
      "selector": "text=Draft",
      "description": "Click on draft report"
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Wait for report to load"
    },
    {
      "action": "click",
      "selector": "button:has-text('Submit Report')",
      "description": "Click Submit Report button"
    },
    {
      "action": "wait",
      "value": "1000",
      "description": "Wait for confirmation dialog"
    },
    {
      "action": "click",
      "selector": "button:has-text('Confirm Submit')",
      "description": "Confirm submission",
      "screenshot": true
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Wait for submission to process"
    },
    {
      "action": "assert",
      "selector": "text=Submitted",
      "description": "Verify status changed to Submitted"
    }
  ],
  "cleanup": []
}
